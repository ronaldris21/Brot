<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:d="http://xamarin.com/schemas/2014/forms/design"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             x:Class="BrotCliente.Views.Login"
             
             Title="Login"
             xmlns:Rounded="clr-namespace:Plugin.RoundedBorderControls;assembly=Plugin.RoundedBorderControls"
             NavigationPage.HasNavigationBar="False">
    <ContentPage.Content>
        <ScrollView BackgroundColor="White">
            <StackLayout Orientation="Vertical"
                         VerticalOptions="Fill"
                         Padding="25">

                <StackLayout VerticalOptions="Start"
                             Margin="0, 20">

                    <Image Source="Brot500.png"
                           WidthRequest="175"/>

                    <Label FontSize="Medium"
                           TextColor="#ff5001"
                           Text="Let's find the best place to eat!"
                           FontAttributes="Bold"
                           Margin="20"
                           HorizontalOptions="Center"/>
                </StackLayout>

                <StackLayout Margin="0, 10">
                    <Rounded:RoundedBorderEntry Margin="0, 10"
                                                BorderColor="#000"
                                                BorderThickness="2"
                                                CornerRadius="0"
                                                Placeholder="Type your username"
                                                PlaceholderColor="Gray"
                                                TextColor="#000"
                                                FontSize="Small"
                                                Text="{Binding Username}"/>

                    <Rounded:RoundedBorderEntry Margin="0, 10"
                                                BorderColor="#000"
                                                BorderThickness="2"
                                                CornerRadius="0"
                                                Placeholder="Type your password"
                                                PlaceholderColor="Gray"
                                                IsPassword="True"
                                                TextColor="#000"
                                                FontSize="Small"
                                                Text="{Binding Password}"/>
                    
                    <StackLayout Orientation="Horizontal"
                                 HorizontalOptions="EndAndExpand">
                        <Label Text="Keep session alive?"
                               TextColor="#000"
                               VerticalOptions="Center"/>

                        <Switch IsToggled="{Binding Remember}"
                                ThumbColor="Black"
                                x:Name="KeepLogged">
                            <Switch.Triggers>
                                <DataTrigger TargetType="Switch" Binding="{Binding Source={x:Reference KeepLogged}, Path=IsToggled}" Value="True">
                                    <Setter Property="ThumbColor" Value="#ff5001"/>
                                </DataTrigger>
                            </Switch.Triggers>
                        </Switch>
                    </StackLayout>
                </StackLayout>

                <StackLayout Margin="0, 10">
                    <Button Text="Login"
                            TextColor="#ff5001"
                            BackgroundColor="Transparent"
                            BorderColor="#ff5001"
                            BorderWidth="1"
                            CornerRadius="3"
                            FontSize="Small"
                            HorizontalOptions="Fill"
                            Command="{Binding LoginCommand}"/>

                    <Button Text="Register"
                            TextColor="#fff"
                            VerticalOptions="Center"
                            BackgroundColor="#ff5001"
                            Command="{Binding SignupCommand}"/>
                </StackLayout>
            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>